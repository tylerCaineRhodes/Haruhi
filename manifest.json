{
  "manifest_version": 3,
  "name": "Haruhi",
  "version": "0.1.0",
  "description": "Replaces mentions of Haruhi Suzumiya with an emoji.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["script.js"]
    }
  ]
}

